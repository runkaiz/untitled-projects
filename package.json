{
	"name": "untitled-project",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"devopen": "vite dev --open",
		"devhost": "vite dev --host",
		"build": "vite build",
		"prepare": "svelte-kit sync",
		"package": "vite package",
		"preview": "vite preview",
		"database": "pscale connect untitled-db main --port 3309",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"vercel-postbuild": "cp node_modules/@prisma/engines/*query* .vercel_build_output/functions/node/render/;cp prisma/schema.prisma .vercel_build_output/functions/node/render/",
		"vercel-build": "prisma generate && pnpm build && pnpm vercel-postbuild",
		"studio": "npx prisma studio",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^1.0.1",
		"@sveltejs/kit": "^1.1.3",
		"@tailwindcss/typography": "^0.5.9",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.32.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"mdsvex": "^0.10.5",
		"postcss": "^8.4.5",
		"prettier": "^2.8.3",
		"prettier-plugin-svelte": "^2.9.0",
		"prisma": "^4.9.0",
		"stylelint-config-recommended": "^9.0.0",
		"svelte": "^3.55.1",
		"svelte-keydown": "^0.5.0",
		"svelte-loader": "^3.1.5",
		"tailwindcss": "^3.0.16",
		"vite": "^4.0.4"
	},
	"type": "module",
	"dependencies": {
		"@prisma/client": "^4.0.0",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/line-clamp": "^0.4.2",
		"bcryptjs": "^2.4.3",
		"cookie": "^0.5.0",
		"highlight.js": "^11.7.0",
		"jsonwebtoken": "^9.0.0",
		"markdown-it": "^13.0.1",
		"svelte-markdown": "^0.2.3",
		"svelte-preprocess": "^5.0.0",
		"svelte-transition-classes": "^0.1.1"
	}
}
